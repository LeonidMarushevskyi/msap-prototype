<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <changeSet id="201609230303" author="serbin">
        <createTable tableName="provider">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="license_type" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="provider_type" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="quality_rating" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="provider_capacity" type="smallint">
                <constraints nullable="false" />
            </column>
            <column name="address" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="phone_number" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="license_type"
                                 baseTableName="provider"
                                 constraintName="fk_provider_license_type"
                                 referencedColumnNames="id"
                                 referencedTableName="lookup_license_type"/>

        <addForeignKeyConstraint baseColumnNames="provider_type"
                                 baseTableName="provider"
                                 constraintName="fk_provider_provider_type"
                                 referencedColumnNames="id"
                                 referencedTableName="lookup_provider_type"/>

        <addForeignKeyConstraint baseColumnNames="quality_rating"
                                 baseTableName="provider"
                                 constraintName="fk_provider_quality_rating"
                                 referencedColumnNames="id"
                                 referencedTableName="lookup_quality_rating"/>

        <addForeignKeyConstraint baseColumnNames="address"
                                 baseTableName="provider"
                                 constraintName="fk_provider_address"
                                 referencedColumnNames="id"
                                 referencedTableName="place"/>

    </changeSet>
</databaseChangeLog>
