<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity SupportedSpecialNeed.
    -->
    <changeSet id="20161006024901" author="jhipster">
        <createTable tableName="supported_special_need">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="provider_id" type="bigint"/>
            <column name="special_need_type_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="provider_id"
                                 baseTableName="supported_special_need"
                                 constraintName="fk_supportedspecialneed_provider_id"
                                 referencedColumnNames="id"
                                 referencedTableName="provider"/>

        <addForeignKeyConstraint baseColumnNames="special_need_type_id"
                                 baseTableName="supported_special_need"
                                 constraintName="fk_supportedspecialneed_specialneedtype_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lookup_special_need_type"/>

    </changeSet>
</databaseChangeLog>
